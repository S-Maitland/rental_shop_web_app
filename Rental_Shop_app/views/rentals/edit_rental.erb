<form action="/rentals/<%= @rental.id %>" method="post">


  <select name="customer_id" id="customers" require>
    <option selected="selected" selected disabled><%= @customer.first_name %> <%= @customer.second_name %></option>
    <% @customers.each do |customer| %>
      <option value="<%= customer.id%>"><%= customer.first_name %> <%= customer.second_name %></option>
    <% end %>
  </select>

  <select name="car_id" id="cars" require>
    <option selected="selected" selected disabled><%= @car.manufacturer %> - <%= @car.model %></option>
    <% @cars.each do |car| %>
      <% if car.rented != "t" %>
        <option value="<%= car.id%>"> <%= car.manufacturer %> - <%= car.model %></option>
      <% end %>
    <% end %>
  </select>


  <input type="submit" class="button" value="Save Rental">
</form>
